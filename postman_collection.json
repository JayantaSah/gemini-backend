{
  "info": {
    "name": "Gemini Backend Clone API",
    "description": "Complete API collection for testing the Gemini Backend Clone system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "mobile_number",
      "value": "+1234567890",
      "type": "string"
    },
    {
      "key": "otp_code",
      "value": "",
      "type": "string"
    },
    {
      "key": "chatroom_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. User Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"{{mobile_number}}\",\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "2. Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"{{mobile_number}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/send-otp",
              "host": ["{{base_url}}"],
              "path": ["auth", "send-otp"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('otp_code', response.otp_code);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "3. Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"{{mobile_number}}\",\n  \"otp_code\": \"{{otp_code}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify-otp"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "4. Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"{{mobile_number}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/forgot-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "forgot-password"]
            }
          }
        },
        {
          "name": "5. Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"current_password\": \"password123\",\n  \"new_password\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "change-password"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/user/me",
              "host": ["{{base_url}}"],
              "path": ["user", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Chatrooms",
      "item": [
        {
          "name": "1. Create Chatroom",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Chatroom\",\n  \"description\": \"A chatroom for testing AI conversations\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chatroom",
              "host": ["{{base_url}}"],
              "path": ["chatroom"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('chatroom_id', response.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "2. Get All Chatrooms",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/chatroom",
              "host": ["{{base_url}}"],
              "path": ["chatroom"]
            }
          }
        },
        {
          "name": "3. Get Chatroom Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/chatroom/{{chatroom_id}}",
              "host": ["{{base_url}}"],
              "path": ["chatroom", "{{chatroom_id}}"]
            }
          }
        },
        {
          "name": "4. Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Hello! Can you help me with Python programming?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/chatroom/{{chatroom_id}}/message",
              "host": ["{{base_url}}"],
              "path": ["chatroom", "{{chatroom_id}}", "message"]
            }
          }
        }
      ]
    },
    {
      "name": "Subscriptions",
      "item": [
        {
          "name": "1. Subscribe to Pro",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/subscribe/pro",
              "host": ["{{base_url}}"],
              "path": ["subscribe", "pro"]
            }
          }
        },
        {
          "name": "2. Get Subscription Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/subscription/status",
              "host": ["{{base_url}}"],
              "path": ["subscription", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        }
      ]
    }
  ]
}

